{
  "rules": {
    ".read": true,
    ".write": true,
    "Books": {
      ".indexOn": ["title", "author", "category"]
    },
    "Members": {
      ".indexOn": ["uid", "name", "email"]
    },
    "Transactions": {
      ".indexOn": ["memberId", "bookId", "status", "borrowDate"]
    },
    "current_rfid": {
      ".read": true,
      ".write": true,
      "uid": {
        ".validate": "newData.isString() && newData.val().length >= 8"
      },
      "timestamp": {
        ".validate": "newData.isString()"
      },
      "status": {
        ".validate": "newData.isString()"
      }
    },
    "rfid_logs": {
      ".read": true,
      ".write": true
    },
    "Userdata": {
      ".read": true,
      ".write": true,
      ".indexOn": ["id_kartu"]
    }
  }
}
